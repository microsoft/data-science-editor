// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.134.0/containers/javascript-node
{
    "name": "Node.js",
    "build": {
        "dockerfile": "Dockerfile",
        // Update 'VARIANT' to pick a Node version: 10, 12, 14
        "args": {
            "VARIANT": "14"
        }
    },
    // Set *default* container specific settings.json values on container create.
    "settings": {},
    // Add the IDs of extensions you want installed when the container is created.
    "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "wix.vscode-import-cost",
        "hediet.vscode-drawio"
    ],
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [8080, 8000],
    // Specifies a command that should be run after the container has been created.
    "postCreateCommand": "yarn setup",
    // Comment out the next line to run as root instead.
    "remoteUser": "node",
    "customizations": {
        "codespaces": {
            "repositories": {
                "microsoft/jacdac-ts": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/jacdac-ddk": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/jupyter-jacdac": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/node-red-contrib-jacdac": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/ml4f": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/gatsby-remark-makecode": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/react-jacdac": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/jacdac-cli": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/jacdac-python": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/pxt-jacdac": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/jacdac-dotnet": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/jacscript": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/jacdac": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                },
                "microsoft/jacdac-c": {
                    "permissions": {
                        "permissions": "write-all"
                    }
                }
            }
        }
    }
}
